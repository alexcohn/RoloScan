<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.samples.vision.ocrreader.StartActivity">

    <TextView android:id="@+id/start_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/preface" />

    <ImageButton android:id="@+id/start_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="@string/gallery"
        android:src="@drawable/btn_gallery"
        android:background="@drawable/btn_background"
        android:onClick="getPhoto"
        android:layout_centerInParent="true" />

    <ImageButton android:id="@+id/start_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="@string/photo"
        android:src="@drawable/btn_photo"
        android:background="@drawable/btn_background"
        android:onClick="getPhoto"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/start_gallery" />

</RelativeLayout>
